RewriteEngine On
RewriteBase /

# Priverstinis HTTPS (rekomenduojama)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Produktų perrašymas
# Pvz.: e-kolekcija.lt/produktas/gliukometras-123 -> product.php?id=123
RewriteRule ^produktas/.*-(?P<id>\d+)$ product.php?id=$1 [L,QSA]

# Receptų perrašymas
RewriteRule ^receptas/.*-(?P<id>\d+)$ recipe_view.php?id=$1 [L,QSA]

# Naujienų perrašymas
RewriteRule ^naujiena/.*-(?P<id>\d+)$ news_view.php?id=$1 [L,QSA]

# Statiniai puslapiai (nebūtina, bet gražiau)
RewriteRule ^parduotuve$ products.php [L]
RewriteRule ^receptai$ recipes.php [L]
RewriteRule ^naujienos$ news.php [L]
RewriteRule ^kontaktai$ contact.php [L]
RewriteRule ^bendruomene$ community.php [L]

# Sitemap
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# 1. Naršyklės podėlio (Browser Caching) nustatymai
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Paveikslėliai - 1 metai
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # CSS ir JS - 1 mėnuo
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Ikonos - 1 metai
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>

# 2. Suspaudimas (Gzip) - sumažina failų dydį siunčiant
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json image/svg+xml
</IfModule>
